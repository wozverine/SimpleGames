<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.glitch.simplegames.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_selectGameFragment"
            app:destination="@id/selectGameFragment" />
    </fragment>

    <fragment
        android:id="@+id/selectGameFragment"
        android:name="com.glitch.simplegames.ui.selectgame.SelectGameFragment"
        android:label="fragment_select_game"
        tools:layout="@layout/fragment_select_game" />
</navigation>